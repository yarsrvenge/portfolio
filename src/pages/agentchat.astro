---
import Layout from '@layouts/Layout.astro';
import Navbar from '@components/Navbar.astro';
import ProfileSection from '@components/ProfileSection.astro';
import AboutSection from '@components/AboutSection.astro';
import ProjectsSection from '@components/ProjectsSection.astro';
import SkillsSection from '@components/SkillsSection.astro';
import FinalSection from '@components/FinalSection.astro';
---
<Layout title="Agent Chat">
  <div class="min-w-[535px] max-w-screen-sm mx-auto py-16 px-8 selection:bg-gray-600 selection:text-white">
    <header>
      <Navbar />
      <ProfileSection />
    </header>
    <main>
      <div class="mt-16">
        <h2 class="text-3xl font-bold">Agent Chat</h2>
        <p class="mt-4 text-gray-300">
          Welcome to the Agent Chat page.
        </p>
        <div class="mt-8 p-6 bg-gray-800 rounded-lg">
          <h3 class="text-xl font-semibold">How to use the chat widget:</h3>
          <ol class="mt-4 list-decimal list-inside space-y-2 text-gray-300">
            <li>Click on the chat icon in the bottom-right corner</li>
            <li>Type your question or request in the input field</li>
            <li>Press Enter or click the send button to submit</li>
            <li>The AI will respond to your query</li>
          </ol>
        </div>
      </div>
    </main>
    <footer class="mt-16">
      <FinalSection />
    </footer>
  </div>
</Layout>
