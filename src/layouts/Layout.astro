---
const title = Astro.props.title;
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-H8MT5WQ0P4"></script>
		<script>
		  // @ts-ignore
		  window.dataLayer = window.dataLayer || [];
		  // @ts-ignore
		  function gtag(){window.dataLayer.push(arguments);}
		  // @ts-ignore
		  gtag('js', new Date());
		  // @ts-ignore
		  gtag('config', 'G-H8MT5WQ0P4');
		</script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<script>
			// Warm up the external app on page load
			window.addEventListener('load', () => {
				fetch('https://branchesi-ai.up.railway.app/robots.txt', { 
					method: 'GET',
					mode: 'no-cors' // Prevents CORS issues since we don't need the response
				})
				.catch(error => {
					// Silent failure - we don't want to affect user experience
					console.debug('Warm-up request sent (success/failure ignored)');
				});
			});
		</script>	
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		font-family: 'Lora', sans-serif;
		background-color: #181818;
		color: #fff;
	}
</style>
