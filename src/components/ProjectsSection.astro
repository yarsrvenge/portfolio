---
import ProjectCard from '@components/ProjectCard.astro'
import Typescript from '@assets/icons/typescript.astro';
import React from '@assets/icons/react.astro';
import Supabase from '@assets/icons/supabase.astro';
import Tailwind from '@assets/icons/tailwind.astro';
import Docker from '@assets/icons/docker.astro';
import Swift from '@assets/icons/swift.astro';
import Pyton from '@assets/icons/python.astro';
import Streamlit from '@assets/icons/streamlit.astro';
import CSharp from '@assets/icons/csharp.astro';
import Unity from '@assets/icons/unity.astro';
import CLang from '@assets/icons/c.astro';
import Xcode from '@assets/icons/xcode.astro';
import Objc from '@assets/icons/objc.astro';
import Linux from '@assets/icons/linux.astro';
---

<section class="my-20">
  <h2 class="text-2xl font-semibold mb-2">Projects</h2>
  <hr class="mb-6 border-zinc-600">

  <ProjectCard projectTitle="AI" projectDescription="This is a custom AI instance that uses open source LLM's.  Showcases some agentic AI workflows I have created.  Private Area: Requires a login to access." projectLink="https://branchesi-ai.up.railway.app" image="/images/ai.png">
    <React />
    <Docker />
    <Pyton />
  </ProjectCard>

  <ProjectCard projectTitle="Uberlaufer" projectDescription="Uberlaufer is a Virtual Reality game I wrote for PC-based VR headsets.  It's a roguelike, procedurally generated dungeon crawler set in WW2 and is available on Steam." projectLink="https://www.uberlaufer.com" image="/images/uberlaufer.png">
    <Unity />
    <CSharp />
  </ProjectCard>

  <ProjectCard projectTitle="Home Arcade" projectDescription="This is a Legends Ultimate Arcade system that I gutted and modified with a Batocera Linux PC customized with hundreds of arcade and video games." projectLink="/arcade" image="/images/arcade.png">
    <Linux />
  </ProjectCard>

  <ProjectCard projectTitle="Doom for Apple TV" projectDescription="A fork of Doom I created for the AppleTV.  This was the first open source code for an Apple TV version." projectLink="https://github.com/yarsrvenge/DOOM-IOS2" image="/images/doom.png">
    <Xcode />
    <Objc />
    <CLang />
  </ProjectCard>
</section>